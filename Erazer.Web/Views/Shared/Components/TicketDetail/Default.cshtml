@model Erazer.Services.Queries.ViewModels.TicketViewModel

<div class="vertical-align">
    <h2>Ticket details</h2>
    <div style="margin-left: 15px;">
        <span title="Priority" class="label label-primary" id="ticketPriority" data-priority-id="@Model.Priority.Id">@Model.Priority.Name</span>
        <span title="Status" class="label label-info" id="ticketStatus" data-status-id="@Model.Status.Id">@Model.Status.Name</span>
    </div>
</div>

<p>
    <b>Title:</b> @Model.Title
</p>

<p>
    <b>Description:</b> @Model.Description
</p>
