@model string
<h2>Ticket comment TODO</h2>
<div class="row">
    <form asp-controller="Home" asp-action="AddComment">
        <div class="col-md-12">
            <b>Comment:</b>
        </div>
        <div class="col-md-10 bottom-space">
            <input type="hidden" name="TicketId" value="@Model" />
            <textarea name="Comment" class="form-control" rows="3" style="min-width: 100%"></textarea>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </form>
</div>