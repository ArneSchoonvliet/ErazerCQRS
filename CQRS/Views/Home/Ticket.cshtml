@{
    ViewData["Title"] = "Ticket";
    var ticketId = ViewBag.TicketId;
}

<div class="row">
    <div class="col-md-6">
        @await Component.InvokeAsync("TicketDetail", new { Id = ticketId })
    </div>

    <div class="col-md-6">
        <h2>Ticket actions TODO</h2>
        <div class="row">
            @await Component.InvokeAsync("PriorityChange")
            @await Component.InvokeAsync("StatusChange")
        </div>
    </div>

    <div class="col-md-6">
        @await Component.InvokeAsync("CommentBox", new { Id = ticketId })
    </div>


    <div class="col-md-12">
        @await Component.InvokeAsync("TicketEvents", new { Id = ticketId })
    </div>

</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var currentPriority = $('#ticketPriority').data('priority-id');
            var currentStatus = $('#ticketStatus').data('status-id');

            $('#priorityList').val(currentPriority).change();
            $('#statusList').val(currentStatus).change();

            $('#priorityList').change(function () {
                $('#priorityForm').submit();
            });
        });
    </script>
}
