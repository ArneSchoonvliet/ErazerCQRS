@model string
@{
    ViewData["Title"] = "Ticket";
}

<div class="row">
    <div class="col-md-6">
        @await Component.InvokeAsync("TicketDetail", new { Id = Model })
    </div>

    <div class="col-md-6">
        <h2>Ticket actions TODO</h2>
        <div class="row">
            @await Component.InvokeAsync("PriorityChange")
            @await Component.InvokeAsync("StatusChange")
        </div>
    </div>

    <div class="col-md-6">
        @await Component.InvokeAsync("CommentBox", new {Id = Model})
    </div>


    <div class="col-md-12">
        @await Component.InvokeAsync("TicketEvents", new { Id = Model })
    </div>

</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var selectedPriority = $('#ticketPriority').data('priority-id');
            var selectedStatus = $('#ticketStatus').data('status-id');

            $('#priorityList').val(selectedPriority).change();
            $('#statusList').val(selectedStatus).change();
        });
    </script>
}
